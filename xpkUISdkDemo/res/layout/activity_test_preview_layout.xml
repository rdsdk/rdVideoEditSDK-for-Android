<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.rd.xpk.editor.EnhancePlaybackView
        android:id="@+id/epvPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:onClick="onPublicViewClick" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvVideoCurrentPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:shadowColor="@android:color/black"
            android:shadowRadius="2"
            android:text="" />

        <SeekBar
            android:id="@+id/sbVideoDetailPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvVideoDuration"
            android:layout_toRightOf="@+id/tvVideoCurrentPos"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:progressDrawable="@drawable/video_detail_player_progress"
            android:thumb="@drawable/video_detail_player_progress_drag" />

        <TextView
            android:id="@+id/tvVideoDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:shadowColor="@android:color/black"
            android:shadowRadius="2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivSnapshot1"
            android:layout_width="176px"
            android:layout_height="99px" />

        <ImageView
            android:id="@+id/ivSnapshot2"
            android:layout_width="176px"
            android:layout_height="99px" />

        <ImageView
            android:id="@+id/ivSnapshot3"
            android:layout_width="176px"
            android:layout_height="99px" />

        <ImageView
            android:id="@+id/ivSnapshot4"
            android:layout_width="176px"
            android:layout_height="99px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPublicViewClick"
            android:text="保存" />

        <Button
            android:id="@+id/btnSwitchSoundTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:onClick="onPublicViewClick"
            android:text="切换配乐" />

        <Button
            android:id="@+id/btnSwitchSoundTrackFactor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:onClick="onPublicViewClick"
            android:text="快速切换配乐占比" />

        <Button
            android:id="@+id/btnAddRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:onClick="onPublicViewClick"
            android:text="添加配音" />

        <Button
            android:id="@+id/btnSwitchFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="onPublicViewClick"
            android:text="切换滤镜" />
    </LinearLayout>

</FrameLayout>